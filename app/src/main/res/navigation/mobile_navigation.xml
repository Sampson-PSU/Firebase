    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.firebaseauthentication.fragments.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_list_books"
        android:name="com.example.firebaseauthentication.fragments.ListBooksFragment"
        android:label="@string/menu_list_books"
