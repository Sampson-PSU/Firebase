    <fragment
        android:id="@+id/nav_add_book"
        android:name="com.example.firebaseauthentication.fragments.AddBookFragment"
        android:label="@string/add_book"
        tools:layout="@layout/fragment_add_book" />

    <fragment
        android:id="@+id/nav_log_out"
